<div>
  <h3>Comment by: <%= comment.author_name %></h3>
  <h5>Posted <%= distance_of_time_in_words_to_now(comment.created_at) %> ago</h5>
  <p class="comment"><%= comment.body %></p>
  <h5>
  <% if logged_in? %>
      <%= link_to "Delete Comment", article_comment_path(comment.article, comment), method: :delete, data: {confirm: "Really delete the comment?"} %>
  <% end %>
  </h5>
</div>