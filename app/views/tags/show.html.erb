<% content_for(:title, "Caleb Barnwell Tags - #{@tag.name.capitalize!}") %>

<h1>Articles Tagged with <%= @tag.name.capitalize! %></h1>

<ul id="articles">
  <% @tag.articles.each do |article| %>
      <li><%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %></li>
  <% end %>
</ul>